{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++.exe",
            "args": [
                "-g",
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "${workspaceFolder}/src/main/iTADOS GRAPH.cpp",
                "-o",
                "${workspaceFolder}/bin/program.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}